            s2 s4 d'8. d16		| %20
            d2  d4. d8			| %21
            d1 \ff ~			| %22
            d1
          }
          \new CueVoice = "cueVoice" \relative c'' {
            \cueClef treble
            r2 r4 r8. f16		|
            f2 f4 \cueClefUnset r4	|
            s1 * 2
          }
          
        >>
      }
      \new Lyrics \lyricsto "bassVoice" {
        \lyricmode {
          \set fontSize = #0
          Be -- via -- mo, be -- via -- mo, be -- viam.
