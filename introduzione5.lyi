\markup {
  \fill-line {
    \center-column {
      \line \fontsize #2 \bold { Beviamo (p. 16) }
      \line \fontsize #1 \italic { Let us drink ... Yes, yes, a toast. }      
    }
  }
}
\score {
  \new Staff = bassStaff {
    \clef bass
    \key a \major
    \time 4/4
    <<
      \new Voice = "bassVoice" \relative c {
        \globals
        <<
          {
            s2 s4 s8. \mark 6 s16	| %1
            s2 s4 s8. f!16		| %2
            f2 f4 r8. f16		| %3
            f2 f4. f8			| %4
            d2 r2			| %5
            R1*4				| %6-9
